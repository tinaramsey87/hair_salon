<h2>Update information for <%= @stylist.name() %></h2>

<form action="/stylists/<%= @stylist.id() %>" method="post" class="form-group">
  <input name="_method" type="hidden" value="patch">

  <label for="name">Edit stylist's name:</label>
  <input id="name" name="name" type="text">

  <button type="submit" class="btn">Update</button>
</form>

<form action="/stylists/<%= @stylist.id() %>" method="post" class="form-group">
  <input name="_method" type="hidden" value="delete">

  <button type="submit" class="btn">Delete this stylist</button>
</form>
